<% include public/views/header.ejs %>

<div class="grid-container">
    <div class="grid-x grid-padding-y grid-padding-x">
        <div class="cell small-12 text-center">
            <h2>PSP Asset Management</h2>
        </div>
    </div>
    <div id="doneDiv">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="button" class="success_bdh button expanded" id="doneBtn" value="D O N E">
            </div>
        </div>
    </div>
    <div id="splashDiv">
        <% include public/views/splash.ejs %>
    </div>
    <% include public/views/scanResults.ejs %>
    <div id="assetEntryDiv">
        <% include public/views/assetEntry.ejs %>
    </div>
    <div id="assetListDiv">
        <form id="listedAssets"></form>
    </div>
    <div id="assetFindDiv">
        <% include public/views/assetFind.ejs %>
    </div>
    <div id="assetEditDiv">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="submit" class="alert_bdh button large expanded" id="assetEditBtn" value="Edit asset[s]">
            </div>
        </div>
    </div>
    <div id="assetDeleteDiv">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="submit" class="alert_bdh button large expanded" id="assetDeleteBtn" value="Delete asset[s]">
            </div>
        </div>
    </div>
    <div id="installBanner">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="submit" class="button large expanded bdh-btn" id="installButton" value="Install to Homescreen">
            </div>
        </div>
    </div>
</div>
<!-- SCRIPTS -->
<script src="public/javascripts/quagga.js" type="text/javascript"></script>
<script src="public/javascripts/main.js" type="module"></script>


<% include public/views/header.ejs %>

<div class="grid-container">
    <div class="grid-x grid-padding-y grid-padding-x">
        <div class="cell small-12 text-center">
            <h2>PSP Asset Management</h2>
        </div>
    </div>
    <div id="doneDiv">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="button" class="alert button expanded" id="doneBtn" value="Return Home">
            </div>
        </div>
    </div>
    <div id="splashDiv">
        <% include public/views/splash.ejs %>
    </div>
    <% include public/views/scanResults.ejs %>
    <div id="assetEntryDiv">
        <% include public/views/assetEntry.ejs %>
    </div>
    <div id="assetListDiv">
        <div class="grid-x">
            <div class="cell small-2 large-2">
                <p><strong>TAG</strong></p>
            </div>
            <div class="cell small-3 large-3">
                <p><strong>ROOM</strong></p>
            </div>
            <div class="cell small-3 large-3">
                <p><strong>MAKER</strong></p>
            </div>
            <div class="cell small-4 large-4">
                <p><strong>MODEL</strong></p>
            </div>
        </div>
        <div id="assetListDivResults"></div>
    </div>
    <div id="assetFindDiv">
        <% include public/views/assetFind.ejs %>
    </div>
    <div id="installBanner">
        <div class="grid-x grid-padding-x grid-padding-y">
            <div class="cell small-12 large-12 text-center">
                <input type="submit" class="button large expanded bdh-btn" id="installBtn" value="Install to Homescreen">
            </div>
        </div>
    </div>
</div>
